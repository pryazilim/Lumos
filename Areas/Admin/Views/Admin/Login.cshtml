<div class="col-md-4 col-sm-12 col-xs-12 mt-login-form  mx-auto login_content">
  <div class=" mx-auto">
    <h2 class="text-font-600 text-24 line-h38 mb-16">Hoş geldiniz,</h2>
    <form>
      <div class="col-md-12 col-sm-12 col-xs-12 mx-auto p-0 mb-16">
        <div class="grid">
          <label class="text-13 text-font-600 line-h19 text-primary" for="user">Kullanıcı Adı</label>
          <input
            class=" rounded py-14 px-16 border-primary outline-none input-focus input-placeholder-primary flex-auto h-40"
            id="Username" type="text">
        </div>
      </div>
      <div class="col-md-12 col-sm-12 col-xs-12 mx-auto p-0 mb-16">
        <div class="flex grid">
          <label class="text-13 text-font-600 line-h19 text-primary" for="myPassword">Şifre</label>
          <input
            class="flex rounded py-14 pl-12 pr-40 h-40 border-primary outline-none input-focus input-placeholder-primary flex-auto"
            type="password" id="Password" />
          <img id="imgCloseEye" onclick="myFunction()"
            class="absolute right-0 w-48 h-16  align-center mt-40 cursor-pointer"
            src="~/Content/Admin/images/icon/Eye-slash.svg" alt="showPas">
        </div>
      </div>
      <div class="col-md-12 col-sm-12 col-xs-12 mx-auto p-0">
        <button type="button" id="Login"
          class="bg-primary text-white border-none py-14 px-16 w-100 rounded text-font-600 transition-colors text-13 line-h19">Giriş
          Yap</button>
      </div>
    </form>
  </div>
</div>
